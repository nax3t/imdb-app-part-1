<% if user_signed_in? %>
	<h1>Welcome, search for a movie!</h1>

	<%= form_tag(search_path, method: "get", class: 'form-inline') do %>
	  <div class="form-group">
  	  <%= text_field_tag :q, nil, placeholder: 'Bambi', class: 'form-control' %>
	  </div>
	  <%= submit_tag("Search", class: 'btn btn-default') %>
	<% end %>
<% else %>
	<h1>Welcome to the IMDB App!</h1>
<% end %>